<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_flower" model="ir.actions.act_window">
        <field name="name">Flower</field>
        <field name="res_model">flower.flower</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_flower_product" model="ir.actions.act_window">
        <field name="name">Flower Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context" eval="{'default_is_flower': True}"/>
        <field name="domain" eval="[('is_flower', '=', True)]"/>
        <field name="view_id" ref="product.product_product_tree_view"/>
    </record>

    <record id="action_water_flower_all" model="ir.actions.server">
        <field name="name">Water Flowers</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_stock_production_lot"/>
        <field name="binding_model_id" ref="model_stock_production_lot"/>
        <field name="code">
            records.action_water_flower()
        </field>
    </record>

    <record id="action_report_flower_sale_order" model="ir.actions.report">
        <field name="name">Flower Sale Orders</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">the_flower_app.flower_sale_order</field>
        <field name="report_file">the_flower_app.flower_sale_order</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_flower_sale_order"/>
    </record>

    <record id="action_product_needs_watering" model="ir.cron">
        <field name="name">Check Products that Need Watering</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="state">code</field>
        <field name="code">model.action_needs_watering()</field>
    </record>

    <record id="ir_cron_get_weather_all_warehouses" model="ir.cron">
        <field name="name">Get weather for all warehouses hourly</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="state">code</field>
        <field name="code">model.get_weather_all_warehouses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="ir_cron_get_forecast_all_warehouses" model="ir.cron">
        <field name="name">Get 5-day forecast for all warehouses hourly</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="state">code</field>
        <field name="code">model.get_forecast_all_warehouses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>
