<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="my_awesome_module.partner_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3 class="text-center">
                        Partner List
                    </h3>
                    <table name="partners" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date of Birth</th>
                                <th>Age</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <tr t-if="o.age &lt; 18">
                                    <td t-out="o.name" style="border: 2px solid red"/>
                                    <td t-out="o.date_of_birth or ''" style="border: 2px solid red"/>
                                    <td t-out="o.age" style="border: 2px solid red"/>
                                </tr>
                                <tr t-else="">
                                    <td t-out="o.name"/>
                                    <td t-out="o.date_of_birth or ''"/>
                                    <td t-out="o.age"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
