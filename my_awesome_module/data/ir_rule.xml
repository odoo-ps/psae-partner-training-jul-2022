<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_custom_all_documents_rule" model="ir.rule">
        <field name="name">Custom rule to see own sale records</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">['|', ('additional_user_ids', 'in', user.id), ('create_uid', '=', user.id)] if \
            user.user_has_groups('sales_team.group_sale_salesman_all_leads') else [('id','=',user.partner_id.id)]</field>
        <field name="active" eval="False"/>
    </record>

    <record id="sale_order_line_custom_all_documents_rule" model="ir.rule">
        <field name="name">Custom rule to see own sale line records</field>
        <field name="model_id" ref="model_sale_order_line"/>
        <field name="domain_force">['|', ('order_id.additional_user_ids', 'in', user.id), ('create_uid', '=', user.id)] if \
            user.user_has_groups('sales_team.group_sale_salesman_all_leads') else [('id','=',user.partner_id.id)]</field>
        <field name="active" eval="False"/>
    </record>

    <record id="res_partner_custom_assigned_rule" model="ir.rule">
        <field name="name">Custom rule to see only contacts assigned to salesperson</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="domain_force">[(1,'=',1)] if user.user_has_groups('sales_team.group_sale_salesman_all_leads') else \
            [('user_id', '=', user.id)] if user.user_has_groups('sales_team.group_sale_salesman') else [('id', '=', user.partner_id.id)]</field>
    </record>

    <record id="sale_order_custom_read_only_rule" model="ir.rule">
        <field name="name">Custom rule to read only sale records</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">[(1,'=',1)] if user.user_has_groups('sales_team.group_sale_salesman_all_leads') else [(0,'=',1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
    </record>

