<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">order.form.inherit.flower.app</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="product_min_age"/>
                <field name="show_button" invisible="1"/>
                <button string="Change Product" type="object" name="action_change_product"
                        attrs="{'invisible': [('show_button', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="products_not_allowed"/>
            </xpath>
            <xpath expr="//button[@name='action_draft']" position="after">
                <field name="age_doubted" invisible="1"/>
                <button name="action_doubt_age" type="object" string="Doubt Age"
                        attrs="{'invisible': ['|', ('age_doubted', '!=', False), ('state', '!=', 'draft')]}"/>
                <button name="action_doubt_clear" type="object" string="Doubt Clear"
                        attrs="{'invisible': ['|', ('age_doubted', '=', False), ('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//group[@name='sale_header']" position="inside">
                <group>
                    <field name="additional_user_ids" widget="many2many_avatar_user"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="sale.menu_sale_order" model="ir.ui.menu">
        <field name="groups_id"
               eval="[(4, ref('sales_team.group_sale_salesman')),(4, ref('my_awesome_module.group_read_only_users'))]"/>
    </record>

</odoo>